<UserControl x:Class="HelpDeskManagement_WPF_MVVM_APP.MVVM.Models.Views.TicketDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HelpDeskManagement_WPF_MVVM_APP.MVVM.Models.Views"
             
                  xmlns:viewmodels="clr-namespace:HelpDeskManagement_WPF_MVVM_APP.MVVM.Models.ViewModels"
                xmlns:views="clr-namespace:HelpDeskManagement_WPF_MVVM_APP.MVVM.Models.Views"
              d:DataContext="{d:DesignInstance Type=viewmodels:TicketDetailModel}"
     
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="40">
        <Grid.RowDefinitions >
            <RowDefinition Height="auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="500"/>


        </Grid.RowDefinitions>
      
            <TextBlock Grid.Row="1" x:Name="_ticketOwnerName" />

        <DataGrid x:Name="_myDetailsDataGrid" ItemsSource="{Binding Tickets}" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ticket ID" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" />
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" />
            
                <DataGridTextColumn Header="Comments">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0}{1}">
                            <Binding Path="Comments.Count" />
                            <Binding Source=" comment(s)" />
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Comments">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding Comments}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CommentsText}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Priority" Binding="{Binding Path=Priorities[0].PriorityName}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Path=Statuses[0].StatusName}" />
            </DataGrid.Columns>
            <!--<TabItem Header="Details">
                <StackPanel>
                    <DataGrid x:Name="ticketDataGrid" AutoGenerateColumns="False" ItemsSource="{Binding SelectedTicket, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Title" Binding="{Binding Title, Mode=TwoWay}" />
                            <DataGridTextColumn Header="Description" Binding="{Binding Description, Mode=TwoWay}" />
                            <DataGridTextColumn Header="Category" Binding="{Binding TicketCategory, Mode=TwoWay}" />
                            <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt, Mode=TwoWay}" />
                            <DataGridTextColumn Header="Last Updated At" Binding="{Binding LastUpdatedAt, Mode=TwoWay}" />
                            <DataGridTextColumn Header="Closed At" Binding="{Binding ClosedAt, Mode=TwoWay}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Save" Command="{Binding UpdateTicketCommand}" />
                </StackPanel>
            </TabItem>-->

        </DataGrid>


    </Grid>

</UserControl>
